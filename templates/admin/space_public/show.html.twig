{% extends 'base2.html.twig' %}

{% block title %}Espace Publique{% endblock %}

{% block body %}
    <h1>Espace Publique</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ space_public.id }}</td>
            </tr>
            <tr>
                <th>Nom de l'image</th>
                <td>{{ space_public.filename }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ space_public.title }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ space_public.content }}</td>
            </tr>
            <tr>
                <th>Création</th>
                <td>{{ space_public.createdAt ? space_public.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ space_public.image }}</td>
            </tr>
            <tr>
                <th>UpdateAt</th>
                <td>{{ space_public.updateAt ? space_public.updateAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_space_public_index') }}" class="btn btn-info">Revenir à la liste</a> </br></br>

    <a href="{{ path('admin_space_public_edit', {'id': space_public.id}) }}" class="btn btn-secondary">Modifier</a></br></br>

    {{ include('admin/space_public/_delete_form.html.twig') }}
{% endblock %}
