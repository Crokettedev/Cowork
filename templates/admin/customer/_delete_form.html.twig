<form method="post" action="{{ path('admin_customer_delete', {'id': customer.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ customer.id) }}">
    <button class="btn btn-danger">Supprimer l'utilisateur</button>
</form>
