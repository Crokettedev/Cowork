{% extends 'base2.html.twig' %}

{% block title %}Customer{% endblock %}

{% block body %}
    <h1>Utilisateurs</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ customer.id }}</td>
            </tr>
            <tr>
                <th>Nom de l'image</th>
                <td>{{ customer.filename }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ customer.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ customer.roles ? customer.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Mot de passe</th>
                <td>{{ customer.password }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ customer.firstname }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ customer.lastname }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ customer.phone }}</td>
            </tr>
            <tr>
                <th>Société</th>
                <td>{{ customer.society }}</td>
            </tr>
            <tr>
                <th>UpdateAt</th>
                <td>{{ customer.updateAt ? customer.updateAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Bio</th>
                <td>{{ customer.bio }}</td>
            </tr>
            <tr>
                <th>Job</th>
                <td>{{ customer.job }}</td>
            </tr>
            <tr>
                <th>Points</th>
                <td>{{ customer.points }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_customer_index') }}" class="btn btn-primary">Revenir en arrière</a>

    <a href="{{ path('admin_customer_edit', {'id': customer.id}) }}" class="btn btn-secondary">Editer</a><br><br>

    {{ include('admin/customer/_delete_form.html.twig') }}
{% endblock %}
