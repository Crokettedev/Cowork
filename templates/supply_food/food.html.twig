{% extends 'base.html.twig' %}

{% block title %}Plats{% endblock %}

{% block body %}
    <main class="my-5 toped">
        <section class="shopping-cart dark">
            <div class="container">
                <div class="block-heading">
                    <h2 class="text-uppercase font-weight-bold">Plats</h2>
                </div>
                <div class="content">
                    {% if showFood is empty %}
                        <div class="card">
                            <div class="card-header text-center">
                                Aucun aliment pour le moment
                            </div>
                        </div>
                    {% endif %}
                    {% for showFoods in showFood %}
                        <div class="row">
                            <div class="col-12 col-md-8">
                                <div class="card bg-dark text-white">
                                    <img src="{{ vich_uploader_asset(showFoods, 'imageFile') | imagine_filter('thumb')}}" class="card-img" alt="...">
                                </div>
                            </div>
                            <div class="col">
                                <div class="card text-center">
                                    <div class="card-body">
                                        <h5 class="card-title">{{ showFoods.title }}</h5>
                                        <p>Prix : {{ showFoods.price }}â‚¬</p>
                                        <p class="card-text">{{ showFoods.content }}.</p>
                                        <a href="{{ path('add_supply_food', {id: showFoods.id, slug: showFoods.slug}) }}"><button type="button" class="btn btn-primary" id="btn_card_home">Ajouter au panier</button></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr>
                    {% endfor %}
                </div>
        </section>
    </main>
{% endblock %}